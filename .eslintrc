{
  "extends": [
    "airbnb-base"
  ],
  "env" : {
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "class-methods-use-this": 0,
    "func-names": 0,
    "global-require": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": [2, { "functions": false }],
    "semi" : [2, "always"]
  }
}