#!/usr/bin/env node
const parent = require('../lib/parent')
const pkg = require('../package.json')
const yargs = require('yargs')

const argv = yargs
  .version(pkg.version).alias('V', 'version')
  .usage('[debug] [options] [files]')
  .help()
  .command('$0 [files..]', '', (yargs) => {
    yargs.positional('files', {
      default: ['test'],
      type: 'string'
    })
  })
  .option('recursive', {
    boolean: true
  })
  .option('require', {
    array: true,
    default: [],
    nargs: 1,
    normalize: true,
    string: true
  })
  .parse(process.argv.slice(2))

parent.start(argv)
